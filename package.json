{
  "name": "kenono",
  "version": "1.0.0",
  "description": "fastify, react, typescript",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV='production' node dist/main.js",
    "dev": "NODE_ENV='development' nodemon dist/main.js",
